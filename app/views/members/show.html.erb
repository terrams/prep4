<!-- ========== Page Title ========== -->
<section>
  <header class="pt-custom pt-dark" style="background-image: url('../hdr-zombie.jpg')" >
    <div class="container">
      <div class="row">
   
        <div class="col-sm-9 pad1">
          <div style="float:left">
            <a href="/"><img src="../logo.png" height="100px" width="170px" alt="Prepper logo"></a>
          </div>
        </div>
        <div class="col-sm-3">
          <div style="margin: 55px 0px 0px 20px;
                      font-size: 1em;
                      letter-spacing: 4px;
                      color: #fff;
                      display: inline;
                      float:right;">View Member</div>
        </div>
  
      </div>
    </div>
  </header>
</section>

<!-- ========== Page Content ========== -->
<section class="container section min-padding">
  <header class="no-padding" style="text-align:center">
    <h2>Member Details</h2>
  </header>
</section>

<section>
  <div class="row ws-s no-padding">
    <div class="col-md-offset-1 col-md-4">
      <img src="/<%= @member.photo %>" height="440px" width="360px" style="margin-bottom:20px">
    </div>
    <div class="col-md-7">
      <div class="row ws-s no-padding">
        <div class="col-md-12">
          <h5>General Information</h5>
        </div>
      </div>
      <div class="row ws-s no-padding">
        <div class="col-md-3">
          <div><b>First Name:</b></div>
          <div><b>Last Name:</b></div>
          <div><b>Type:</b></div>
          <div><b>Gender:</b></div>
          <div><b>Active:</b></div>
          <div><b>Bugout kit completed:</b></div>
          <div><b>Special Needs:</b></div>        
        </div>
        <div class="col-md-9">
          <div><%= @member.first_name %>&nbsp;</div>
          <div><%= @member.last_name %>&nbsp;</div>
          <div><%= @member.member_type %>&nbsp;</div>
          <div><%= @member.gender %>&nbsp;</div>
          <div><% if @member.active %>Yes<% else %>No<% end %>&nbsp;</div>
          <div><% if @member.kit %>Yes<% else %><span style="color:red"><b>No</b></span><% end %>&nbsp;</div>         
          <div><%= @member.special_needs %>&nbsp;</div>
        </div>
      </div>
      <div class="row ws-s no-padding">
        <div class="col-md-12">
          <h5>Contact Information</h5>
        </div>
      </div>
      <div class="row ws-s no-padding">
        <div class="col-md-3">
          <div><b>Day Phone:</b></div>
          <div><b>Cell Phone:</b></div>
          <div><b>Email:</b></div>
        </div>
        <div class="col-md-9">
          <div><%= @member.work_phone %>&nbsp;</div>
          <div><%= @member.cell_phone %>&nbsp;</div>
          <div><%= @member.email %>&nbsp;</div>
        </div>
      </div>
      <div class="row ws-s no-padding">
        <div class="col-md-12"><br><br>
          <%= link_to "Edit", "/members/#{@member.id}/edit", class: "btn btn-success" %>
          <%= link_to "Delete", "/members/#{@member.id}", {method: :delete, class: "btn btn-danger" }%> 
        </div>
      </div>
    </div>
  </div>
</section>


