<!-- ========== Login Form ========== -->
 
<div class="container">

  <section class="container section min-padding">
    <header class="no-padding" style="text-align:center">
      <h2>Member Details</h2>
    </header>
  </section>


  <div class="row ws-m no-padding">
    <div class="col-md-offset-1 col-md-11">

      <div class="form-wrapper">
        <div class="form-content">
          <%= form_tag '/members', method: :post do  %>

            <div class="form-group">

              <div class="row ws-m no-padding">
                <div class="col-md-5">             
                  <%= label_tag :first_name %>
                  <%= text_field_tag :first_name, "", class: 'form-control',  placeholder: 'first name' %>
                </div>
                <div class="col-md-offset-2 col-md-5">             
                  <%= label_tag :email %>
                  <%= text_field_tag :email, "", class: 'form-control',  placeholder: 'email' %>
                </div>
              </div>

              <div class="row ws-m no-padding">
                <div class="col-md-5">             
                  <%= label_tag :last_name %>
                  <%= text_field_tag :last_name, "", class: 'form-control',  placeholder: 'last name' %>
                </div>
                <div class="col-md-offset-2 col-md-5">             
                  <%= label_tag :photo %>
                  <%= text_field_tag :photo, "", class: 'form-control',  placeholder: 'photo file name' %>
                </div>
              </div>

              <div class="row ws-m no-padding">
                <div class="col-md-5">             
                  <%= label_tag :work_phone %>
                  <%= text_field_tag :work_phone, "", class: 'form-control',  placeholder: 'work phone' %>
                </div>
                <div class="col-md-offset-2 col-md-5">             
                  <%= label_tag :special_needs %>
                  <%= text_field_tag :special_needs, "", class: 'form-control',  placeholder: 'special needs' %>
                </div>
              </div>

              <div class="row ws-m no-padding">
                <div class="col-md-5">             
                  <%= label_tag :cell_phone %>
                  <%= text_field_tag :cell_phone, "", class: 'form-control',  placeholder: 'cell phone' %>
                </div>
                <div class="col-md-offset-2 col-md-1">             
                  <br><%= label_tag :gender %>
                  <%= select_tag :gender, options_for_select([ "Male", "Female" ]) %>
                </div>
                <div class="col-md-offset-1 col-md-1">             
                  <br><%= label_tag :active %>
                  <%= select_tag :actve, options_for_select([ true, false ]) %>
                </div>                
                <div class="col-md-offset-1 col-md-1">             
                  <br><%= label_tag :type %>
                  <%= select_tag :member_type, options_for_select([ "adult", "child", "senior", "pet",]) %>
                </div>                
              </div>
            </div>  <!-- end form group -->          

            <%= submit_tag "add member", class: 'btn' %>

          <% end %>
        </div><!-- / .form-content -->
      </div><!-- / .form-wrapper -->            
    
    </div><!-- / .col-md-6 -->
  </div><!-- / .row -->
</div><!-- / .container -->

