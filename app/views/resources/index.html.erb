<section class="container portfolio-layout portfolio-columns-boxed no-padding">
  <div class="row no-padding">
    <header class="sec-heading">
      <h2>Resources</h2>
      <span class="subheading">Something I will add later</span>
    </header>
  </div><!-- / .row -->
  
  <!-- Filters -->
  <div class="row no-padding">
    <ul id="pfolio-filters" class="portfolio-filters">
      <li class="active"><a href="#" data-filter="*">All</a></li>
      <li><a href="#" data-filter=".webdesing">Bugout Bag</a></li>
      <li><a href="#" data-filter=".print">Base</a></li>
    </ul>
  </div>

  <div class="row ws-m no-padding">
    <div id="pfolio">

    <% @resources.each do |resource| %>
      <!-- Item 1 -->
      <div class="col-md-3 portfolio-item print">
        <div class="p-wrapper hover-default">
          <img src="http://placehold.it/990x650" alt="Project Example">
          <div class="p-hover">
            <div class="p-content"></h4>
              <h6 class="subheading"><%= resource.teaser %></h6>
            </div>
          </div>
          <a href="/resources/1" class="open-btn"><i class="fa fa-expand"></i></a>
        </div>
      </div><!-- / .portfolio-item -->

      <% end %>
    </div><!-- / #pfolio -->
  </div><!-- / .row -->
</section><!-- / .portfolio-columns-boxed -->

