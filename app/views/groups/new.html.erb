<!-- ========== Page Title ========== -->
<section>
  <header class="pt-custom pt-dark">
    <div class="container">
      <div class="row">
   
        <div class="col-sm-3 pad1">
          <div style="float:left">
            <a href="/logout"><img src="../assets/images/logo.png" height="100px" width="170px" alt="Prepper logo"></a>
          </div>
        </div>
        <div class="col-sm-9 pad1">
          <div class="myheader">Create your prep group</div>
        </div>

      </div>
    </div>
  </header>
</section>

<!-- ========== Login Form ========== -->
 
<div class="container">
  <div class="row ws-m">
    <div class="col-md-offset-1 col-md-8">

      <div class="form-wrapper">
        <div class="form-content">

          <h3 class="form-header">Your Group's Home Location</h3>
          <%= form_tag '/groups', method: :post do  %>

          <p class="no-text-transform"><b>1.</b>&nbsp;&nbsp;Identify your group and your "home base" location.  This is the primary location where your group will meet to evacuate or shelter in place. </p>
            <div class="form-group">
              <div>
                <%= label_tag :create_a_name_for_your_group %>
                <%= text_field_tag :name, "", class: 'form-control',  placeholder: 'group name' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :base_phone, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_zip_code %>
                <%= text_field_tag :base_zip, "", class: 'form-control',  placeholder: 'zip code' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :local_meetup_location %>
                <%= text_field_tag :local_meetup, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :local_zip, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :remote_meetup, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :remote_zip, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :crisis_contact_first_name, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :crisis_contact_last_name, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :cc_home_phone, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :cc_cell_phone, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :cc_email, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :cc_zip, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>
            <div class="form-group">
              <div>
                <%= label_tag :home_phone_number %>
                <%= text_field_tag :crisis_contact_last_name, "", class: 'form-control',  placeholder: 'home phone' %>
              </div>
            </div>

            <%= submit_tag "Create My Family", class: 'btn' %>
          <% end %>

        </div><!-- / .form-content -->
      </div><!-- / .form-wrapper -->            
    
    </div><!-- / .col-md-6 -->
  </div><!-- / .row -->
</div><!-- / .container -->

